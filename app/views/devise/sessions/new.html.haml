%h2 Sign in

= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-signin', :id => 'signin'}) do |f|
  %div
    = f.email_field :email, :autofocus => true, :class => 'form-control', :placeholder => "Email"
  %div
    = f.password_field :password, :class => 'form-control', :placeholder => 'Password'
  - if devise_mapping.rememberable?
    %div
      = f.check_box :remember_me
      = f.label :remember_me
  %div= f.submit "Sign in", class: 'btn btn-primary btn-lg'