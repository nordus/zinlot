%h2 Forgot your password?
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :class => 'pure-form pure-form-aligned', :method => :post }) do |f|
  = devise_error_messages!

  .pure-control-group
    = f.label :email
    = f.email_field :email, :autofocus => true

  .pure-controls
    = f.submit "Send me reset password instructions", class: 'pure-button pure-button-primary'

  = render "devise/shared/links"