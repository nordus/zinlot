    %li
      %a#avatar-list-item.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}}
        = gravatar_image_tag(current_user.email)
        = current_user.email
        %span.caret
      %ul.dropdown-menu
        %li
          = link_to raw("<i class='glyphicon glyphicon-log-out'></i> Log out"), destroy_user_session_path, method: 'DELETE'
    %li.active
      %a{:href => '/'}
        %i.glyphicon.glyphicon-dashboard
        &nbsp;Dashboard
    %li
      %a{:href => '/devices'}
        %i.glyphicon.glyphicon-eye-open
        &nbsp;Live Inventory
    %li
      %a{:href => '/test-drives'} 
        %i.glyphicon.glyphicon-road
        &nbsp;Trips
    %li
      %a{:href => '/alerts'}
        %i.glyphicon.glyphicon-bell
        &nbsp;Alerts
    %li
      %a{href: '/settings'}
        %i.glyphicon.glyphicon-cog
        Account
    %li
      %a{href: '/campaigns'}
        %i.glyphicon.glyphicon-bullhorn
        &nbsp;Campaigns
- else
  %ul.nav
    %li
      %a{href: '/users/sign_in'}
        %i.glyphicon.glyphicon-log-in
        &nbsp;Log in
